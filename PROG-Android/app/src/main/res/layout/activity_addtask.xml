<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/addTaskNameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task Description"
            android:id="@+id/addTaskDescField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Member task assign to:"
            android:textSize="13sp" />

        <Spinner
            android:id="@+id/memberListSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Task Due Date:"
            android:textSize="13sp" />

        <DatePicker
            android:id="@+id/TaskDatePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/btns"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:id="@+id/add_task_submit_btn" />


    </LinearLayout>

</ScrollView>