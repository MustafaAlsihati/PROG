<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="#231f20">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RegisterLabel"
        android:text="Enter your User Name, Email Address, and Password to sign up as new user."
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textSize="13dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/userNameRegField"
        android:hint="User Name"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        android:textColorHint="#ACACAC"
        android:textCursorDrawable="@null"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/emailRegField"
        android:hint="Email Address"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:textColorHint="#ACACAC"
        android:textCursorDrawable="@null"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/passwordRegField"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:textColorHint="#ACACAC"
        android:hint="Password"
        android:textCursorDrawable="@null"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/bioRegField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="About Yourself (Max 150 character)"
        android:inputType="text"
        android:maxLength="150"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textCursorDrawable="@null"
        android:textColorHint="#ACACAC" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_marginTop="50dp"
        android:id="@+id/registerConfirmBtn"
        android:textSize="16dp"
        android:textColor="#FFF"
        android:background="@drawable/btns"
        android:shadowColor="#A8A8A8"
        android:shadowRadius="10"
        android:textAllCaps="false"
        android:text="Register"/>

</LinearLayout>